{% extends "layout.jinja2" %}
{% block content%}
  <div class="container">
    <h1>Covid-19 tracker</h1>

    <div class="row mb-4">
      <div class="col-sm">

      </div>
      <div class="col-sm">

      </div>
      <div class="col-sm">

      </div>
    </div>
  </div>

    <a href="#" id="use-my-location" data-toggle="tooltip" title="Uses your browser's local storage">Use my location</a>
    <div id="mapid"></div>

  <div class="container mt-3">
    <form method="POST" id="add-location">
      <div class="form-group row">
        <label for="lat" class="col-sm-2 col-form-label">Latitude</label>
        <div class="col-sm-10">
          <input type="text" id="lat" class="form-control-plaintext readonly" name="lat" placeholder="click on the map" required />
        </div>
      </div>
      <div class="form-group row">
        <label for="lon" class="col-sm-2 col-form-label">Longitude</label>
        <div class="col-sm-10">
          <input type="text" id="lon" class="form-control-plaintext readonly" name="lon" placeholder="click on the map" required />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <input type="text" id="name" class="form-control-plaintext border" name="name" placeholder="Write the name of the location." required />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <textarea id="note" class="form-control-plaintext border" name="note" placeholder="Additional information (optional)"></textarea>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button class="btn btn-primary" type="submit">Add</button>
        </div>
      </div>
    </form>
  </div>
{% endblock %}
{% block bottom_js %}
  <script>
    var marker;
    map.on('click', function(e) {
      if(marker)
        map.removeLayer(marker);
      marker = L.marker(e.latlng).addTo(map);
      $("#lat").val(e.latlng.lat);
      $("#lon").val(e.latlng.lng);
    });

    // A hack to make the form fields required and read-only at the same time.
    $(".readonly").on('keydown paste', function(e){
        e.preventDefault();
    });

    var form_selector = 'form#add-location'
    $(document).on('submit', form_selector, function() {
        $.ajax({
            url: $(this).attr('action'),
            type: $(this).attr('method'),
            data: $(this).serialize(),
            success: function( data ) {
              marker_data = objectifyForm($(form_selector).serializeArray());
              marker_data.owned = true;
              add_map_marker(map, marker_data);
              map.removeLayer(marker);
              $(form_selector).trigger('reset');
            },
            error: function( xhr, err ) {
              alert(err);
            }
        });
        return false;
    });

  </script>
{% endblock %}